-include Makefile.utils

V = 0
AT_0 := @
AT_1 :=
AT_2 :=
REDIR_0 := 2> /dev/null 1> /dev/null
REDIR_1 := > /dev/null
REDIR_2 :=
AT = $(AT_$(V))
REDIR = $(REDIR_$(V))

SDL2PREFIX=$(PWD)/SDL2Framework
SDL2MAIN=$(SDL2PREFIX)/lib/libSDL2.$(EXTENSION)
SDL2IMAGE=$(SDL2PREFIX)/lib/libSDL2_image.$(EXTENSION)
SDL2MIXER=$(SDL2PREFIX)/lib/libSDL2_mixer.$(EXTENSION)
SDL2TTF=$(SDL2PREFIX)/lib/libSDL2_ttf.$(EXTENSION)
SDL2CONFIG=$(SDL2PREFIX)/bin/sdl2-config
FREETYPE=$(SDL2PREFIX)/lib/libfreetype.la
LUAINTERFACESRC=jni/luacppinterface/LuaCppInterface
LUA=jni/luacppinterface/lua/src/liblua.a
MRUBY=$(SDL2PREFIX)/lib/libmruby.a

CXXFLAGS=$(EXTRA_CFLAGS) -DSMALL_SCREEN \
	-pipe $(shell $(SDL2CONFIG) --cflags) \
	-I$(PWD)/jni/luacppinterface/LuaCppInterface \
	-I$(PWD)/jni/luacppinterface/lua/src \
	-I$(PWD)/jni/boost \
	-I$(PWD)/jni/box2d \
	-I$(PWD)/jni/glm \
	-I$(PWD)/jni/mruby/include

LDFLAGS=$(shell $(SDL2CONFIG) --libs) -lSDL2_image -lSDL2_mixer -lSDL2_ttf -lstdc++ -lmruby -lmruby_core $(OPENGL_LDFLAGS)

SRCDIR=jni/src
SRC=$(shell find $(LUAINTERFACESRC) -name "*.cpp") $(shell find $(SRCDIR) -name "*.cpp") 
OUT=obj
OBJS=$(SRC:%.cpp=$(OUT)/%.o)
DEPS=$(SRC:%.cpp=$(OUT)/%.d)
NODEPS=clean

.PHONY = all clean

.SECONDEXPANSION:


all: $(TARGET)
	$(AT)echo "Building for $(OS)"

clean:
	$(AT)-rm -rf $(TARGET) $(OUT) $(SDL2PREFIX) $(REDIR)
	$(AT)cd jni/mruby && ruby minirake clean $(REDIR)

ifeq (0, $(words $(findstring $(MAKECMDGOALS), $(NODEPS))))
    -include $(DEPS)
endif

$(TARGET): $(OBJS) $(LUA)
	$(AT)echo [LINK] $@
	$(AT)$(CXX) $(CXXFLAGS) $^ $(LDFLAGS) -o $@ 

%/.f:
	$(AT)echo [MKDIR] $(dir $@)
	$(AT)mkdir -p $(dir $@) 
	$(AT)touch $@

$(OUT)/%.d:%.cpp $$(@D)/.f $(SDL2MAIN) $(SDL2IMAGE) $(SDL2MIXER) $(SDL2TTF) $(MRUBY)
	$(AT)echo [DEP] $<
	$(AT)$(CXX) $(CXXFLAGS) -MM -MT '$(patsubst %.d,%.o,$@)' $< -MF $@

$(OUT)/%.o:%.cpp $(OUT)/%.d
	$(AT)echo [C++] $<
	$(AT)$(CXX) $< $(CXXFLAGS) -c -o $@

$(FREETYPE):
	$(AT)echo [BLD] $@
	$(AT)chmod +x jni/SDL_ttf/external/freetype/configure
	$(AT)cd jni/SDL_ttf/external/freetype && ./configure --prefix=$(SDL2PREFIX) $(REDIR)
	$(AT)cd jni/SDL_ttf/external/freetype && make all install $(REDIR)

$(SDL2MAIN):
	$(AT)echo [BLD] $@
	$(AT)chmod +x jni/SDL/autogen.sh
	$(AT)cd jni/SDL && ./autogen.sh $(REDIR)
	$(AT)cd jni/SDL && ./configure --prefix=$(SDL2PREFIX) $(REDIR)
	$(AT)make -C jni/SDL all install $(REDIR)

$(SDL2IMAGE): $(SDL2MAIN)
	$(AT)echo [BLD] $@
	$(AT)chmod +x jni/SDL_image/autogen.sh
	$(AT)cd jni/SDL_image && ./autogen.sh $(REDIR)
	$(AT)cd jni/SDL_image && ./configure --prefix=$(SDL2PREFIX) $(REDIR)
	$(AT)make -C jni/SDL_image all install $(REDIR)

$(SDL2MIXER): $(SDL2MAIN) $(FREETYPE)
	$(AT)echo [BLD] $@
	$(AT)chmod +x jni/SDL_mixer/autogen.sh $(REDIR)
	$(AT)cd jni/SDL_mixer && ./autogen.sh $(REDIR)
	$(AT)cd jni/SDL_mixer && ./configure --prefix=$(SDL2PREFIX) $(REDIR)
	$(AT)make -C jni/SDL_mixer all install $(REDIR)

$(SDL2TTF): $(SDL2MAIN)
	$(AT)echo [BLD] $@
	$(AT)chmod +x jni/SDL_ttf/autogen.sh $(REDIR)
	$(AT)cd jni/SDL_ttf && ./autogen.sh $(REDIR)
	$(AT)cd jni/SDL_ttf && ./configure --prefix=$(SDL2PREFIX) --with-freetype-exec-prefix=$(SDL2PREFIX) $(REDIR)
	$(AT)make -C jni/SDL_ttf all install $(REDIR)

$(LUA):
	$(AT)echo [BLD] $@
	$(AT)cd jni/luacppinterface/lua && make generic $(REDIR)

$(MRUBY):
	$(AT)echo [BLD] $@
	$(AT)cd jni/mruby && ruby minirake $(REDIR)
	$(AT)cp jni/mruby/build/host/lib/lib*.a $(SDL2PREFIX)/lib/ $(REDIR)

.PRECIOUS: %/.f
